extends ../templates/layout.pug

block main
    main.main
        div.container-form
            form(action='/my-handling-form-page' method='get')
                h4 Registro de usuario

                div.separator

                div.wrapper-input
                    div.wrapper-name
                        input#fname(type='text' name='fname')
                        label.label-form(for='fname') Primer Nombre

                    div.wrapper-name
                        input#lname(type='text' name='lname')
                        label.label-form(for='lname') Apellido

                div.wrapper-input
                    input#lname(type='tel' name='phone')
                    label.label-form(for='phone') Telefono

                div.wrapper-input
                    input#lname(type='email' name='user-email')
                    label.label-form(for='email-user') Correo

                div.wrapper-input
                    input#lname(type='email' name='confirm-email')
                    label.label-form(for='confirm-email') Confirmar Correo

                div.wrapper-input
                    input#lname(type='password' name='password-email')
                    label.label-form(for='password-email') Contrase√±a

                button.form-submit Registrar
            
                div.f-form
                    span.q-account Tiene una cuenta?
                    a(href='/auth/login').redirect-form Inicia Secion